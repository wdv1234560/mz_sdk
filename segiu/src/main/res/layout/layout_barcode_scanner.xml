<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/zxing_barcode_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zxing_framing_rect_height="200dp"
        app:zxing_framing_rect_width="200dp" />

    <com.mz.segiu.widget.ZxingViewFinderView
        android:id="@+id/zxing_viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scannerBoundCornerColor="@color/colorPrimary"
        app:scannerBoundCornerHeight="15dp"
        app:scannerBoundCornerWith="3dp"
        app:scannerTipText="将二维码放入框内，即自动扫描"
        app:scannerTipTextMargin="25dp"
        app:scannerTipTextSize="13sp"
        app:zxing_possible_result_points="@color/colorPrimary"
        app:zxing_result_view="@color/zxing_custom_result_view"
        app:zxing_viewfinder_laser="@color/colorPrimary"
        app:zxing_viewfinder_mask="@color/zxing_custom_viewfinder_mask" />

</merge>
